<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-12">
    <img src=<%= @user.image %> class = "icon_image">
    <%= render 'shared/user_info' %>
  
    <%= render 'follow_form' %> 
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
  </div>
</div>
  
<html lang="ja">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
 <ol class="userposts">
     <% @posts.each do |post| %>
     <div class="postsbox">
         <a data-toggle="modal" data-target="#modal-e<%= post.id %>" data-backdrop="true">
             <%= image_tag post.picture.url  if post.picture? %>
         </a>
     <div class="modal fade" id="modal-e<%= post.id %>" tabindex="-1">
        <div class="modal-dialog modal-vertical-centered">
            <div class="modal-content"  style="height: 550px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modal-label">投稿</h4>
                </div>
                <div class="modal-body" style="height: 490px;">
                    <div class="userpostsbox">
                    <%= render 'posts/userpost', posts: @user.posts, post: post %>
                    </div>
                </div>
            </div>
        </div>
     </div>
    </div>
    <% end %>
 </ol>    
</body>
</html>

<%= will_paginate @posts %>
    <% end %>